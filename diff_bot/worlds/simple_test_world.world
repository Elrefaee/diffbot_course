<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="default">
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Simple Box to test LiDAR detection -->
    <model name="test_box">
      <static>true</static>
      <link name="box_link">
        <pose>1 0 0.5 0 0 0</pose>
        <collision name="collision">
          <geometry>
            <box><size>0.5 0.5 1</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.5 0.5 1</size></box>
          </geometry>
        </visual>
      </link>
    </model>
  </world>
</sdf>
